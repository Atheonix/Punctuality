<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relLayo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/neuropol"
        android:gravity="left|center_vertical"
        android:text="Your Schedules"
        android:textColor="@color/Coral_red"
        android:textSize="30sp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/Black"
                android:fontFamily="@font/conthrax"
                android:gravity="left|center_vertical"
                android:text="Normal Bell"
                android:textColor="@color/Inchworm"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/Black"
                android:fontFamily="@font/conthrax"
                android:gravity="left|center_vertical"
                android:text="Late Start"
                android:textColor="@color/Inchworm"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/Black"
                android:fontFamily="@font/conthrax"
                android:gravity="left|center_vertical"
                android:text="Minimum Day"
                android:textColor="@color/Inchworm"
                android:textSize="25sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>